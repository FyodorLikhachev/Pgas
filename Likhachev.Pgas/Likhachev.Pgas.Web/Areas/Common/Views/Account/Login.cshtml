@model Likhachev.Pgas.Core.Accounts.LoginData
@{
    ViewData["Title"] = "Login";
}

<h2>Вход на сайт</h2>
<br />
<div class="col-md-4">
    <section>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            @Html.ValidationSummary()
            <div>
                <div class="form-group">
                    <label asp-for="Login">Ваш логин</label><br />
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label><br />
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </section>
</div>
<a asp-action="Register" asp-controller="Account">Регистрация</a>